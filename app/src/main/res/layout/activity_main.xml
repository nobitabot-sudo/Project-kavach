<?xml version="1.0" encoding="utf-8"?>
<!-- Main Dashboard Activity - Control Center -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A0A0A"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0A0A0A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- App Logo -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_kavach_logo"
                    android:tint="#00F2FF"
                    android:contentDescription="@string/app_name" />

                <!-- App Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Project Kavach"
                    android:textColor="#00F2FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Settings Icon -->
                <ImageView
                    android:id="@+id/settingsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings"
                    android:tint="#CCCCCC"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/settings" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Safety Score Meter Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#0A0A0A"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/score_card_gradient">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overall Safety Score"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Circular Progress Meter -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_gravity="center">

                        <!-- Background Circle -->
                        <ProgressBar
                            android:id="@+id/safetyScoreBackground"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_bg"
                            android:rotation="-90" />

                        <!-- Animated Score Circle -->
                        <ProgressBar
                            android:id="@+id/safetyScoreProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circular_progress_cyan"
                            android:rotation="-90" />

                        <!-- Pulsating Glow Effect -->
                        <View
                            android:id="@+id/scoreGlow"
                            android:layout_width="220dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:background="@drawable/score_glow"
                            android:alpha="0.6" />

                        <!-- Score Text -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/safetyScoreText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00F2FF"
                                android:textSize="64sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:id="@+id/scoreStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculating..."
                                android:textColor="#CCCCCC"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Protection Shields Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protection Shields"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Financial Shield Toggle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#0F0F0F"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_financial_shield"
                        android:tint="#00FF88"
                        android:contentDescription="@string/financial_shield" />

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Financial Security"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/financialScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 95/100"
                            android:textColor="#00FF88"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Toggle Switch -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/financialShieldToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#00FF88"
                        app:trackTint="#333333" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Personal Safety Toggle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#0F0F0F"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_personal_shield"
                        android:tint="#00F2FF"
                        android:contentDescription="@string/personal_safety" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Safety"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/personalScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 88/100"
                            android:textColor="#00F2FF"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/personalShieldToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#00F2FF"
                        app:trackTint="#333333" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Device Health Toggle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#0F0F0F"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_device_shield"
                        android:tint="#FFB800"
                        android:contentDescription="@string/device_health" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Health"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deviceScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 92/100"
                            android:textColor="#FFB800"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/deviceShieldToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FFB800"
                        app:trackTint="#333333" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Scam History Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Threats"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAllButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="#00F2FF"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Scrollable Scam History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scamHistoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="20dp" />

            <!-- Empty State (Hidden by Default) -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_shield_check"
                    android:tint="#00FF88"
                    android:alpha="0.5"
                    android:contentDescription="@string/no_threats" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Clear!"
                    android:textColor="#00FF88"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No threats detected recently"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
